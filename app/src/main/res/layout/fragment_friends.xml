<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <EditText android:layout_width="200dp" android:layout_height="wrap_content" android:inputType="text"
                  android:singleLine="true" android:id="@+id/friendAccount"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="好友帐号"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加好友"
                android:id="@+id/addFriend" android:layout_gravity="right"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvFriends" />
</LinearLayout>
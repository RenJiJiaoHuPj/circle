<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/iv_image"
                    android:layout_gravity="center_horizontal"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="@dimen/small_label_width"
                          android:layout_height="wrap_content"
                          android:text="性别"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>

                <EditText android:layout_width="@dimen/common_input_width"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:singleLine="true"
                          android:id="@+id/gender"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="@dimen/small_label_width"
                          android:layout_height="wrap_content"
                          android:text="昵称"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>

                <EditText android:layout_width="@dimen/common_input_width"
                          android:layout_height="wrap_content"
                          android:inputType="text"
                          android:singleLine="true"
                          android:id="@+id/nickname"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="@dimen/small_label_width"
                          android:layout_height="wrap_content"
                          android:text="密码"
                          android:visibility="gone"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/tv_pw_old"/>

                <EditText android:layout_width="@dimen/common_input_width"
                          android:layout_height="wrap_content"
                          android:inputType="textPassword"
                          android:singleLine="true"
                          android:id="@+id/et_pw_old"
                          android:visibility="gone"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:layout_width="@dimen/small_label_width"
                          android:layout_height="wrap_content"
                          android:text="新密码"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/tv_pw_new"
                          android:visibility="gone"/>

                <EditText android:layout_width="@dimen/common_input_width"
                          android:layout_height="wrap_content"
                          android:inputType="textPassword"
                          android:singleLine="true"
                          android:id="@+id/et_pw"
                          android:visibility="gone"
                          android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                    >
                <TextView android:layout_width="@dimen/small_label_width"
                          android:layout_height="wrap_content"
                          android:text="重复"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:id="@+id/tv_pw_new2"
                          android:visibility="gone"/>

                <EditText android:layout_width="@dimen/common_input_width"
                          android:layout_height="wrap_content"
                          android:inputType="textPassword"
                          android:singleLine="true"
                          android:id="@+id/et_pw2" android:visibility="gone"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:textIsSelectable="false"/>
            </LinearLayout>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置"
                    android:id="@+id/setInfo"
                    android:layout_gravity="center_horizontal"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="放弃设置"
                    android:visibility="gone"
                    android:id="@+id/delsetInfo" android:layout_gravity="center_horizontal"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出当前帐号"
                    android:id="@+id/quit" android:layout_gravity="center_horizontal"
                    />

        </LinearLayout>
    </LinearLayout>
</ScrollView>